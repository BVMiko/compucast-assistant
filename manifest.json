{
	"name": "Compucast Assistant",
	"version": "0.0.1.8",
	"description": "Helper for common Compucast website activities",
	"author": "Brian Villemarette <BVMiko@gmail.com>",
	"icons": {
		"16": "compucast.png",
		"48": "compucast.png",
		"128": "compucast.png"
	},

	"permissions": [ "activeTab", "tabs", "storage", "webRequest", "webRequestBlocking", "http://www.compucast.com/*", "<all_urls>" ],

	"optional_permissions": [ "<all_urls>" ],

	"browser_action": {
		"default_icon": "compucast.png",
		"default_popup": "popup.html"
	},

	"background": {
		"persistent": true,
		"scripts": [ "background.js" ]
	},

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

	"manifest_version": 2
}
